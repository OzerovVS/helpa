        <Button x:Name="start" Content="Начать" HorizontalAlignment="Center" Height="20" Margin="0,200,0,0" VerticalAlignment="Top" Width="100" Grid.Row="2" Click="Button_Click"/>
        <RadioButton x:Name="o1" Content="Крестик" HorizontalAlignment="Left" Margin="10,200,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <RadioButton x:Name="o2" Content="Нолик" HorizontalAlignment="Left" Margin="10,220,0,0" Grid.Row="2" VerticalAlignment="Top"/>

    </Grid>
